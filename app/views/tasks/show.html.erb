<div class = "container my-3">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <div class="my-2">
    <%= link_to 'All Tasks', tasks_path %>
  </div>
  <div class="my-2">
    <%= link_to 'New Task', new_task_path %>
  </div>
  <div class="my-2">
    <%= link_to "Edit Task", edit_task_path(@task) %>
  </div>
  <%= link_to 'Delete Task', task_path(@task), method: "delete", data: {confirm: "Are you sure?"} %>
</div>